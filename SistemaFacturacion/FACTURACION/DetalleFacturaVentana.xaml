<Window x:Class="SistemaFacturacion.FACTURACION.DetalleFacturaVentana"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaFacturacion.FACTURACION"
        mc:Ignorable="d"
        Title="Detalles de Factura" Height="350" Width="525">
    <Grid>
        <Label x:Name="lblFacturaId" Content="Factura ID: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <Label x:Name="lblCliente" Content="Cliente: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <Label x:Name="lblTotal" Content="Total: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <!-- Agregar más controles para mostrar los detalles de la factura -->
    </Grid>
</Window>
