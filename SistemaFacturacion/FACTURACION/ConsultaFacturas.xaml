<Window x:Class="SistemaFacturacion.FACTURACION.ConsultaFacturas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Consulta de Facturas" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <TextBlock Text="Gestión de Facturas"
                   FontSize="24"
                   FontWeight="Medium"
                   Margin="0,0,0,20"
                   Foreground="#1976D2"/>

        <!-- Panel principal con sombra -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="1" 
                                Direction="270" 
                                Color="#22000000"/>
            </Border.Effect>

            <DataGrid x:Name="dgFacturas" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      SelectionMode="Single"
                      GridLinesVisibility="Horizontal"
                      BorderThickness="0"
                      Background="Transparent"
                      RowBackground="White"
                      AlternatingRowBackground="#F8F8F8"
                      Margin="2">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#E3F2FD"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID Factura" 
                                      Binding="{Binding IdFactura}" 
                                      Width="100"/>
                    <DataGridTextColumn Header="Cliente" 
                                      Binding="{Binding NombreCliente}" 
                                      Width="*"/>
                    <DataGridTextColumn Header="Fecha" 
                                      Binding="{Binding Fecha, StringFormat=dd/MM/yyyy}" 
                                      Width="150"/>
                    <DataGridTextColumn Header="Total" 
                                      Binding="{Binding Total, StringFormat=C}" 
                                      Width="150"/>
                    <DataGridTextColumn Header="Estado" 
                                      Binding="{Binding EstadoTexto}" 
                                      Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Barra de acciones -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Exportar Reporte"
                    Click="ExportarReporte_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Anular Factura"
                    Background="#F44336"
                    Click="AnularFactura_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Ver Detalles"
                    Background="#4CAF50"
                    Click="VerDetalles_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Cerrar"
                    Background="#757575"
                    Click="Cerrar_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>