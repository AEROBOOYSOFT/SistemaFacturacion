<Window x:Class="SistemaFacturacion.FACTURACION.PagosFactura"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaFacturacion.FACTURACION"
        mc:Ignorable="d"
        Title="Gestión de Pagos de Facturas" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Búsqueda de factura -->
        <GroupBox Header="Buscar Factura" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="Factura ID:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"/>
                <TextBox x:Name="txtFacturaID" 
                        Grid.Column="1" 
                        Width="200" 
                        HorizontalAlignment="Left"/>
                <Button Content="Buscar" 
                        Grid.Column="2" 
                        Click="btnBuscar_Click"
                        Width="100"/>

            </Grid>
        </GroupBox>

        <!-- Filtro por Fecha -->
        <GroupBox Header="Filtrar por Fecha" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="Fecha Inicio:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"/>
                <DatePicker x:Name="dpFechaInicio" 
                            Grid.Column="1" 
                            Width="200"/>
                <Label Content="Fecha Fin:" 
                       Grid.Column="2" 
                       VerticalAlignment="Center" 
                       Margin="10,0,10,0"/>
                <DatePicker x:Name="dpFechaFin" 
                            Grid.Column="3" 
                            Width="200"/>
                <Button Content="Filtrar" 
                        Grid.Column="4" 
                        Click="btnFiltrar_Click"
                        Width="100"/>
            </Grid>
        </GroupBox>

        <!-- Detalles de la factura -->
        <GroupBox Header="Información de Factura" 
                  Grid.Row="2">
            <UniformGrid Columns="2" 
                         HorizontalAlignment="Left">
                <StackPanel Margin="0,0,20,0">
                    <Label Content="Cliente:"/>
                    <TextBox x:Name="txtCliente" 
                            Width="250" 
                            IsReadOnly="True"/>
                </StackPanel>
                <StackPanel>
                    <Label Content="Total Factura:"/>
                    <TextBox x:Name="txtTotalFactura" 
                            Width="150" 
                            IsReadOnly="True"/>
                </StackPanel>
            </UniformGrid>
        </GroupBox>

        <!-- Lista de pagos realizados -->
        <GroupBox Header="Historial de Pagos" 
                  Grid.Row="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="dgPagos" 
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         AlternatingRowBackground="#F8F8F8"
                         BorderBrush="#DDDDDD"
                         GridLinesVisibility="All">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Fecha" 
                                          Binding="{Binding FechaPago}" 
                                          Width="150"/>
                        <DataGridTextColumn Header="Monto" 
                                          Binding="{Binding MontoPagado, StringFormat=C}" 
                                          Width="120"/>
                        <DataGridTextColumn Header="Método de Pago" 
                                          Binding="{Binding MetodoPago}" 
                                          Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" 
                          Orientation="Horizontal" 
                          Margin="0,10,0,0">
                    <StackPanel Margin="0,0,20,0">
                        <Label Content="Total Pagado:"/>
                        <TextBox x:Name="txtTotalPagado" 
                                Width="150" 
                                IsReadOnly="True"/>
                    </StackPanel>
                    <StackPanel>
                        <Label Content="Saldo Pendiente:"/>
                        <TextBox x:Name="txtSaldoPendiente" 
                                Width="150" 
                                IsReadOnly="True"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Registro de nuevo pago -->
        <GroupBox Header="Registrar Pago" 
                  Grid.Row="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Monto:" 
                       VerticalAlignment="Center"/>
                <TextBox x:Name="txtMontoPago" 
                        Grid.Column="1"/>
                <Label Content="Método de Pago:" 
                       Grid.Column="2" 
                       Margin="10,0,0,0"/>
                <ComboBox x:Name="cmbMetodoPago" 
                         Grid.Column="3">
                    <ComboBoxItem Content="Efectivo"/>
                    <ComboBoxItem Content="Tarjeta de Crédito"/>
                    <ComboBoxItem Content="Transferencia"/>
                </ComboBox>

                <StackPanel Grid.Row="1" 
                          Grid.ColumnSpan="5" 
                          Orientation="Horizontal" 
                          HorizontalAlignment="Right" 
                          Margin="0,10,0,0">
                    <Button Content="Eliminar Pago" 
                            Click="btnEliminarPago_Click"
                            Background="#F44336"/>
                    <Button Content="Registrar Pago" 
                            Click="btnRegistrarPago_Click"
                            Background="#4CAF50"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
