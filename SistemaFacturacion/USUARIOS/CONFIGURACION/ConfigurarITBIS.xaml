<Window x:Class="SistemaFacturacion.USUARIOS.CONFIGURACION.ConfigurarITBIS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaFacturacion.USUARIOS.CONFIGURACION"
        mc:Ignorable="d"
        Title="Configuración de Empresa" Height="400" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Nombre de la Empresa -->
        <Label Grid.Row="0" Grid.Column="0" Content="Nombre de Empresa:" VerticalAlignment="Center" />
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtNombreEmpresa" />

        <!-- RUC -->
        <Label Grid.Row="1" Grid.Column="0" Content="RUC:" VerticalAlignment="Center" />
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtRUC" />

        <!-- Teléfono -->
        <Label Grid.Row="2" Grid.Column="0" Content="Teléfono:" VerticalAlignment="Center" />
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtTelefono" />

        <!-- Dirección -->
        <Label Grid.Row="3" Grid.Column="0" Content="Dirección:" VerticalAlignment="Center" />
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtDireccion" />

        <!-- ITBIS -->
        <Label Grid.Row="4" Grid.Column="0" Content="Impuesto ITBIS (%):" VerticalAlignment="Center" />
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtITBIS" />

        <!-- Botones -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnGuardar" Content="Guardar" Width="100" Margin="5" Click="btnGuardar_Click" />
            <Button x:Name="btnCancelar" Content="Cancelar" Width="100" Margin="5" Click="btnCancelar_Click" />
        </StackPanel>
    </Grid>
</Window>
