<Window x:Class="SistemaFacturacion.USUARIOS.GestionUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Usuarios" Height="490" Width="710">
    <Grid>
        <!-- Formulario de Crear/Editar Usuario -->
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Nombre de Usuario" />
            <TextBox x:Name="txtNombreUsuario" Width="200" Margin="5" />

            <TextBlock Text="Correo Electrónico" />
            <TextBox x:Name="txtEmailUsuario" Width="200" Margin="5" />

            <TextBlock Text="Contraseña" />
            <PasswordBox x:Name="txtPasswordUsuario" Width="200" Margin="5" />

            <TextBlock Text="Rol" />
            <ComboBox x:Name="cbRoles" Width="200" Margin="5" />
        </StackPanel>

        <!-- Botones de Acción -->
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Button Content="Guardar Usuario" Width="150" Margin="5" Click="BtnGuardarUsuario_Click" />
            <Button Content="Eliminar Usuario" Width="150" Margin="5" Click="BtnEliminarUsuario_Click" />
        </StackPanel>

        <!-- DataGrid para mostrar usuarios -->
        <DataGrid x:Name="dgUsuarios" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="200" Margin="10,150,0,0" 
                  AutoGenerateColumns="False" SelectionChanged="dgUsuarios_SelectionChanged" RenderTransformOrigin="0.59,0.645">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre Usuario" Binding="{Binding NombreUsuario}" Width="150"/>
                <DataGridTextColumn Header="Correo" Binding="{Binding Email}" Width="200"/>
                <DataGridTextColumn Header="Rol" Binding="{Binding RoleNombre}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botón para cerrar la ventana -->
        <Button Content="Cerrar" Width="100" Height="30" Margin="10,360,0,0" Click="BtnCerrar_Click" />
    </Grid>
</Window>
