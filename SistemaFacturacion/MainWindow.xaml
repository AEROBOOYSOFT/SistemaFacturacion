<Window x:Class="SistemaFacturacion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaFacturacion"
        mc:Ignorable="d"
        Title="Sistema de Facturación" Height="450" Width="800">
    <Grid>
        <!-- Menú en la parte superior -->
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Usuarios">
                <MenuItem Header="Gestionar Usuarios" Click="MenuItemGestionUsuarios_Click"/>
            </MenuItem>
            <MenuItem Header="Roles">
                <MenuItem Header="Gestionar Roles" Click="MenuItemGestionRoles_Click"/>
            </MenuItem>
            <MenuItem Header="Permisos">
                <MenuItem Header="Asignar Permisos a Roles" Click="MenuItemAsignarPermisos_Click"/>
                <MenuItem Header="Gestionar Permisos" Click="MenuItemGestionPermisos_Click"/>
            </MenuItem>
        </Menu>

        <!-- Botones debajo del Menú -->
        <Button Content="Consulta Clientes" Width="156" Height="40" 
                Click="AbrirConsultaClientes_Click" 
                VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,40,0,0"/>

        <Button Content="Consulta Productos" Width="156" Height="40" 
                Click="AbrirConsultaProductos_Click" 
                VerticalAlignment="Top" HorizontalAlignment="Left" Margin="171,40,0,0"/>

        <Button Content="Registro Facturas" Width="156" Height="40" 
                Click="AbrirRegistroFacturas_Click" 
                VerticalAlignment="Top" HorizontalAlignment="Left" Margin="332,40,0,0"/>

        <Button Content="Consulta Facturas" Width="156" Height="40" 
                Click="AbrirConsultaFacturas_Click" 
                VerticalAlignment="Top" HorizontalAlignment="Left" Margin="493,40,0,0"/>
    </Grid>
</Window>
