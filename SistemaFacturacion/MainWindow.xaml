<Window x:Class="SistemaFacturacion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaFacturacion"
        mc:Ignorable="d"
        Title="Sistema de Facturación" Height="450" Width="800">
    <Grid>
        <!-- Botón para abrir la ventana de consulta de clientes -->
        <Button Content="Consulta Clientes" Width="156" Height="40" 
                Click="AbrirConsultaClientes_Click" 
                VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"/>

        <!-- Botón para abrir la ventana de consulta de productos -->
        <Button Content="Consulta Productos" Width="156" Height="40" 
                Click="AbrirConsultaProductos_Click" 
                VerticalAlignment="Top" HorizontalAlignment="Left" Margin="171,10,0,0"/>

        <!-- Botón para abrir la ventana de registro de facturas -->
        <Button Content="Registro Facturas" Width="156" Height="40" 
                Click="AbrirRegistroFacturas_Click" 
                VerticalAlignment="Top" HorizontalAlignment="Left" Margin="332,10,0,0"/>

        <!-- Botón para abrir la ventana de consulta de facturas -->
        <Button Content="Consulta Facturas" Width="156" Height="40" 
                Click="AbrirConsultaFacturas_Click" 
                VerticalAlignment="Top" HorizontalAlignment="Left" Margin="493,10,0,0"/>
    </Grid>
</Window>

